<div class="card">
  <div class="card-body p-5">
    <h6 class="text-center">会員情報編集</h5>

    <%= form_with model: @user, url: admin_user_path(@user) do |f| %>

      <!--プロフィール画像・プレビュー-->
      <div class="form-group userProfileImg">
        <%= f.label :profile_image, "プロフィール画像",for: "file_photo", class: "userProfileImg_description" %>
        <i class="fas fa-camera fa-3x"></i>
        <%= f.file_field :profile_image, accept: "image/*", id: "file_photo" %>
      </div>
      <div class="userImgPreview" id="userImgPreview">
        <img id="thumbnail" class="userImgPreview_content" accept="image/*" src="">
        <p class="userImgPreview_text">画像をアップロード済み</p>
      </div>

      <!--入力フォーム-->
      <div class="form-group">
        <%= f.label :name, "ユーザー名" %>
        <%= f.text_field :name, autofocus: true, placeholder: "sample", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, autocomplete: "email", placeholder: "sample@sample.com", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.radio_button :is_deleted, false, class: "mr-1" %><%= f.label :is_deleted, '有効', value: false, class: "mr-4" %>
        <%= f.radio_button :is_deleted, true, class: "mr-1" %><%= f.label :is_deleted, '退会', value: true %>
      </div>
      <div class="text-center">
        <%= f.submit "変更を保存", class: "btn signUpBtn " %>
      </div>
    <% end %>
  </div>
</div>