<div class="card">
  <div class="card-body p-5">
    <h6 class="text-center">ログイン</h5>

    <%= form_with model: @user, url: user_session_path do |f| %>

      <!--入力フォーム-->
      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, autocomplete: "email", placeholder: "sample@sample.com", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :password, "パスワード" %>
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "6文字以上", class: "form-control" %>
      </div>
      <div class="text-center">
        <%= f.submit "ログイン", class: "btn blackBtn" %>
      </div>
    <% end %>
  </div>
</div>